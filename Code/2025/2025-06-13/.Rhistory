df[, commission_date := as.Date(commission_date, format = "%m/%d/%Y")]
df[, termination_date := as.Date(termination_date, format = "%m/%d/%Y")]
df[, duration := as.numeric(difftime(termination_date, commission_date, units = "days")) / 365.25]
df_M <- df[gender == "M", ]
